@model ClevelandTeaRevival.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>


<table>
    <thead>
        <tr>
            <th>
                Tea
            </th>

            <th>
                Ounces
            </th>

            <th>
                Pounds
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @{
            foreach (var item in Model.TransactionTabs)
            {


                <tr>
                    <td>
                        @item.Tea.Name
                    </td>
                    <td>
                        @item.Ozs x @item.PricePerOz
                    </td>
                    <td>
                        @item.Lbs x @item.PricePerLb
                    </td>
                    <td>
                        Placeholder for tab total
                    </td>
                </tr>


            }
        }
    </tbody>
</table>
<br />
<h3>
    Total: @Model.Transaction.Total
</h3>