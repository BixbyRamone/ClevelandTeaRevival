@model ClevelandTeaRevival.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Tea
            </th>
            <th>
                Lbs
            </th>
            <th>
                Ozs
            </th>
            <th>
                Tea Price
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TransactionTabs)
{
        <tr>
            <td>
                @Html.DisplayFor(model => item.Tea.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Lbs)
            </td>
            <td>
                @Html.DisplayFor(model => item.Ozs)
            </td>
            <td>

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>

        </tr>
}
    </tbody>
</table>
