@model IEnumerable<ClevelandTeaRevival.Models.Tea>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Our Teas</h2>


@{
    List<string> categories = new List<string>();

    foreach (var tea in Model)
    {

        var index = categories.IndexOf(tea.Category);
        if (index == -1)
        {
            categories.Add(tea.Category);
        }


    }

    foreach (var Category in categories)
    {
        <table class="table">
            <thead class="tea-category">
                <tr>
                    <th>
                        @Html.DisplayName(Category)
                    </th>
                </tr>
            </thead>
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>                    

                    <th>
                        @Html.DisplayNameFor(model => model.PricePerOz)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PricePerLb)
                    </th>


                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    if (item.Category == Category)
                    {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerOz)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerLb)
                    </td>

                    <td>
                        
                        <div>
                            <a asp-controller="Transactions" asp-action="Index" asp-route-id="@item.ID">Add To Cart</a>
                        </div>

                    </td>


                </tr>
                    }


                }
            </tbody>


        </table>
    }
}



