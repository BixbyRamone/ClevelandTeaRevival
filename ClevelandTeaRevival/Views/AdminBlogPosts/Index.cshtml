@model ClevelandTeaRevival.ViewModels.BlogPostViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "AdminBlogPosts"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.BlogPost.Title)
                @Html.TextBoxFor(m => m.BlogPost.Title)
                @Html.ValidationMessageFor(m => m.BlogPost.Title)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.BlogPost.Text)
                @Html.TextBoxFor(m => m.BlogPost.Text)
                @Html.ValidationMessageFor(m => m.BlogPost.Text)
            </div>

            @Html.HiddenFor(m => m.BlogPost.ID)
            <button type="submit" class="btn btn-primary">Save</button>

        }
        
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogPost.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogPost.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogPost.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BlogPosts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
