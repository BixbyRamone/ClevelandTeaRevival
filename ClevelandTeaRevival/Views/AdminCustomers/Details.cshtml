@model ClevelandTeaRevival.ViewModels.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.AspNetUserId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.AspNetUserId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customer.MailingAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customer.MailingAddress)
        </dd>
    </dl>
</div>

@{ foreach (var transaction in Model.Transactions)
    {
        <table class="table">
            <thead>
                <tr>                    
                        @{
                            if (transaction.Completed == false)
                            {
                            <th>
                                Order is Open
                            </th>
                                }
                                else
                                {
                                <th>
                                    @transaction.CompletionDate.ToString()
                                </th>

                                }
                            }

                </tr>
            </thead>
            @{ foreach (var tab in transaction.TransactionTabs)
                {
                    <tr>
                        <td>
                            @tab.Tea.Name
                        </td>
                        <td>
                            @tab.Ozs at @tab.PricePerOz per oz
                        </td>
                        <td>
                            @tab.Lbs at @tab.PricePerLb per lb
                        </td>
                        <td>
                            Total
                        </td>
                    </tr>

                }

            }
        </table>

    }

}
<table class="table">
    <thead>
       
            @{ foreach (var transaction in Model.Transactions)
                {   
                    <tr>

                    </tr>
                    

                }

            }

    </thead>
    <tbody>

    </tbody>

</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Customer.ID">Edit</a> |
